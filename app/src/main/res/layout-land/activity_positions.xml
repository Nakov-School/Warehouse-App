<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Positions">

        <TextView android:layout_width="match_parent" android:layout_height="100dp"
                  android:text="Sector: 1"
                  android:textSize="30sp"
                  android:textColor="#000"
                  android:padding="30dp"
                  android:gravity="center"
                  android:id="@+id/sector"/>

        <ImageButton
                android:text="back"
                android:layout_width="60dp"
                android:layout_marginTop="20dp"
                android:layout_height="60dp"
                android:id="@+id/backbtn"
                android:adjustViewBounds="true"
                android:src="@drawable/backarrowy"
                android:background="@android:color/transparent" android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"/>

        <GridLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:columnCount="5"
                    android:layout_marginTop="100dp"
                    android:rowCount="2">
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos1"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos2"
                    android:layout_column="1"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos3"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos4"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos5"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos6"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos7"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:onClick="onClick"
                    android:id="@+id/buttonpos8"/>
            <Button
                    android:text=""
                    android:layout_width="190dp"
                    android:onClick="onClick"
                    android:layout_height="190dp"
                    android:id="@+id/buttonpos9"/>

