<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditBox">



        <ImageButton
                android:text="back"
                android:layout_width="60dp"
                android:layout_marginTop="20dp"
                android:layout_height="60dp"
                android:id="@+id/backbtn"
                android:adjustViewBounds="true"
                android:src="@drawable/backarrowy"
                android:background="@android:color/transparent" android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"/>

        <TextView android:layout_width="match_parent" android:layout_height="100dp"
                  android:text="Position: 1"
                  android:textSize="30sp"
                  android:textColor="#000"
                  android:padding="30dp"
                  android:gravity="center"
                  android:id="@+id/position"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:textColor="#000"
                        android:layout_marginTop="400dp"
                        android:layout_marginLeft="10dp"
                        android:text="Content:"
                        android:textStyle="bold"/>
                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:prompt="@string/spinner_prompt"
                        android:layout_marginTop="400dp"
                        android:layout_marginLeft="150dp"
                        android:entries="@array/content_categories"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="10dp"
                android:text="Quantity:"
                android:textStyle="bold"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
                android:prompt="@string/spinner_prompt2"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="150dp"
                android:entries="@array/content_quantity"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#000"
                android:layout_marginTop="600dp"
                android:layout_marginLeft="10dp"
                android:text="PR:"
                android:textStyle="bold"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:prompt="@string/spinner_prompt2"
                android:layout_marginTop="600dp"
                android:layout_marginLeft="150dp"
                android:entries="@array/content_pr"/>
        <Button
                android:text="Apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/apply"
                android:layout_marginTop="700dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="100dp"
                />
        <Button
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/delete"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="700dp"
                android:layout_marginRight="100dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>